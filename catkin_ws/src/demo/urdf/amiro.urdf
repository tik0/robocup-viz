<?xml version="1.0"?>
<robot name="AMiRo">

  <material name="blue">
    <color rgba="0 0 .8 1"/>
  </material>

  <material name="black">
    <color rgba="0 0 0 1"/>
  </material>

  <material name="white">
    <color rgba="1 1 1 1"/>
  </material>

  <link name="base_link">
  </link>

  <link name="base">
    <visual>
      <geometry>
        <cylinder length="0.08" radius="0.05"/>
      </geometry>
      <material name="blue"/>
    </visual>
  </link>

  <joint name="base_link_to_base" type="fixed">
    <parent link="base_link"/>
    <child link="base"/>
    <origin xyz="0 0 0.06"/>
  </joint>

  <link name="right_wheel">
    <visual>
      <geometry>
        <cylinder length="0.01" radius="0.03"/>
      </geometry>
      <origin rpy="1.57075 0 0" xyz="0 0 0"/>
      <material name="black"/>
    </visual>
  </link>

  <joint name="base_to_right_wheel" type="fixed">
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <origin xyz="0 -0.03 0.02"/>
  </joint>

  <link name="left_wheel">
    <visual>
      <geometry>
        <cylinder length="0.01" radius="0.03"/>
      </geometry>
      <origin rpy="1.57075 0 0" xyz="0 0 0"/>
      <material name="black"/>
    </visual>
  </link>

  <joint name="base_to_left_wheel" type="fixed">
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <origin xyz="0 0.03 0.02"/>
  </joint>

</robot>
